<% comments.each do |comment| %>
  <div class="comment-field">
    <p>
      <%= attachment_image_tag  user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg", class:"profile_image" %><br>
      <%= link_to user.name, user_path(user.id) %>
    </p>
    <p><%= comment.comment %></p>
    <% if comment.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(comment.book.id, comment.id), method: :delete, remote: true, class:"btn btn-sm btn-danger"  %>
    <% end %>
  </div>
<% end %>