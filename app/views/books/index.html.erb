<div class="container px-5 px-sm-0">
  <%= render 'books/error_message', model:@book %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/sidebar', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr class="book_index">
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag  book.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg", class: "profile_image" %>
                <% end %>
              </td>
              <td class="td_book_title"><%= link_to book.title, book_path(book.id) %></td>
              <td class="td_book_body"><%= book.body %></td>
              <td>
                <% if book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(book.id), method: :delete, class: "favorite" do %>
                      ♥<%= book.favorites.count %>
                    <% end %>
                  </p>
                <% else %>
                  <p>
                    <%= link_to book_favorites_path(book.id), method: :post do %>
                      ♡<%= book.favorites.count %>
                    <% end %>
                  </p>
                <% end %>
              </td>
              <td>コメント数: <%= book.book_comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

