<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/sidebar', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag  @user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg", class:"profile_image" %><br>
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td class="td_book_title"><%= link_to @book_show.title, book_path(@book_show.id) %></td>
            <td class="td_book_body"><%= @book_show.body %></td>
            <td>
              <% if @book_show.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(@book_show.id), method: :delete, class: "favorite" do %>
                      ♥<%= @book_show.favorites.count %>
                    <% end %>
                  </p>
                <% else %>
                  <p>
                    <%= link_to book_favorites_path(@book_show.id), method: :post do %>
                      ♡<%= @book_show.favorites.count %>
                    <% end %>
                  </p>
                <% end %>
            </td>
            <td>コメント数：<%= @book_comments.count %></td>
            <% if current_user.id == @user.id %>
              <td><%= link_to "Edit", edit_book_path(@book_show.id), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book_show.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

        <% @book_comments.each do |comment| %>
        <div class="comment-field">
        <p>
          <%= attachment_image_tag  @user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg", class:"profile_image" %><br>
          <%= link_to @user.name, user_path(@user.id) %>
        </p>
        <p><%= comment.comment %></p>
        <% if comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(comment.book.id, comment.id), method: :delete, class:"btn btn-sm btn-danger"  %>
        <% end %>
              </div>
        <% end %>

      <div class="new-comment">
        <%= form_with(model:[@book_show, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5', class: "comment-text-area" %></br>
          <%= f.submit "送信" %>
        <% end %>
      </div-->


    </div>
  </div>
</div>






