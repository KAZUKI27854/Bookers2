
<div class="container px-5 px-sm-0">
  <div class="row">
    
    <%= render 'books/sidebar', book: @book, user: @user %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <th><%= attachment_image_tag  @user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg", class:"profile_image" %></br>
            <%= link_to current_user.name, user_path %></th>
            <th><%= link_to @book.title, book_path(@book.id) %></th>
            <th><%= @book.body %></th>
            <th><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></th>
            <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %></th>
            
          </tr>
        </tbody>
      </table>
      
    </div>
  </div>
  
</div>

  
  
  
  

