<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag  user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg", class:"profile_image" %>
  
  <table class="table">
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
  </table>
  
  <div class="row">
    <% if current_user.id == user.id %>
      <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/<%= current_user.id %>/edit"></a>
    <% else %>
      <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/<%= current_user.id %>"></a>
    <% end %>
  </div>
    

  <%= form_with model:book, url:books_path, local:true do |f| %>
    <h2>New book</h2>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <div class="submit_button">
    <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>