<div class="user_info">
  <h1>User info</h1>
  <h4>image</h4>
  <h4>name</h4>
  <h4>introduction</h4>
  <%= link_to "user_edit", edit_user_path %>
</div>

<div class="new_book">
  <%= form_with model:book, url:books_path, local:true do |f| %>
    <h2>New book</h2>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>