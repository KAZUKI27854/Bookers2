<div class="user_info">
  <h1>User info</h1>
  <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
  <h4>name <%= user.name %></h4>
  <h4>introduction <%= user.introduction %></h4>
  <% if current_user.id == user.id %>
  <%= link_to "user_edit", edit_user_path(current_user.id) %>
  <% else %>
  <%= link_to "user_edit", user_path(current_user.id) %>
  <% end %>
</div>

<div class="new_book">
  <%= form_with model:book, url:books_path, local:true do |f| %>
    <h2>New book</h2>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>