<% if books.exists? %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% books.each do |book| %>
            <tr class="book_index">
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag  book.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg", class: "profile_image" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <p>No search results</p>
<% end %>