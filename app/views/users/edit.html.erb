<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@user.errors.count, "error") %>prohibited this book from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
             <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="InputName" class="form-label">Name</label>
          <%= f.text_field :name, class:"form-control", id:"Inputname" %>
        </div>
        <div class="form-group">
          <label for="PostImage" class="form-label">Image</label>
          <%= f.attachment_field :profile_image, class:"form-control", id:"PostImage" %>
        </div>
        <div class="form-group">
          <label for="InputIntroduction" class="form-label">Introduction</label>
          <%= f.text_area :introduction, class:"form-control", id:"InputIntroduction" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class:"btn btn-md btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>